{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended"
    ],
    "labels": [
      "dependencies"
    ],
    "assignees": [
      "yanxue06"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch"
        ],
        "automerge": true
      },
      {
        "matchUpdateTypes": [
          "minor"
        ],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      },
      {
        "matchUpdateTypes": [
          "minor"
        ],
        "matchCurrentVersion": "/^0/",
        "automerge": true
      },
      {
        "matchUpdateTypes": [
          "pin",
          "digest"
        ],
        "automerge": true
      },
      {
        "matchUpdateTypes": [
          "major"
        ],
        "automerge": false
      }
    ]
  }